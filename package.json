{
  "name": "@selenic/core",
  "version": "0.11.0",
  "description": "selenic core",
  "keywords": [
    "license"
  ],
  "homepage": "https://github.com/mkwtys/selenic",
  "bugs": "https://github.com/mkwtys/selenic/issues",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/mkwtys/selenic.git"
  },
  "license": "MIT",
  "author": "mkwtys <mkwtys@gmail.com>",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib",
    "!lib/__tests__"
  ],
  "scripts": {
    "build": "npm run clean && npm run build:js && npm run build:types",
    "build:js": "babel src --out-dir lib --extensions \".ts\" --ignore src/**/__tests__/",
    "build:types": "tsc --emitDeclarationOnly",
    "clean": "rimraf lib/",
    "coverage": "jest --coverage",
    "test": "jest",
    "test:update": "jest -u"
  },
  "babel": {
    "presets": [
      "@babel/preset-typescript",
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": 12
          }
        }
      ]
    ]
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": true
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "fixtures"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "fixtures"
    ]
  },
  "dependencies": {
    "semver": "^7.3.2"
  },
  "devDependencies": {
    "@babel/cli": "7.27.2",
    "@babel/preset-env": "7.27.2",
    "@babel/preset-typescript": "7.27.1",
    "@types/jest": "30.0.0",
    "@types/node": "22.15.33",
    "@types/semver": "7.7.0",
    "jest": "30.0.2",
    "rimraf": "6.0.1",
    "typescript": "5.8.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "changelog": {
    "repo": "mkwtys/selenic",
    "cacheDir": ".changelog",
    "labels": {
      "breaking": ":boom: Breaking Change",
      "enhancement": ":rocket: Enhancement",
      "bug": ":bug: Bug Fix",
      "documentation": ":memo: Documentation",
      "dependencies": ":arrow_up: Dependencies",
      "internal": ":house: Internal"
    }
  }
}
